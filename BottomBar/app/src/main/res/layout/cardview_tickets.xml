<android.support.v7.widget.CardView
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    android:elevation="2dp"
    app:cardCornerRadius="5dp"
    app:contentPaddingBottom="2dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="安吉乐门票"
          android:id="@+id/title"
          android:textSize="18sp"
          android:layout_marginLeft="16dp"
          android:layout_marginBottom="16dp"
          android:layout_marginTop="16dp"
          android:textColor="@color/primary_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prise"
            android:textColor="#ff5802"
            android:text="现价：200元"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/publishtime"
            android:text="发布时间：4月15日"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/prise" />

        <Button
            android:layout_height="35dp"
            android:layout_width="wrap_content"
            android:id="@+id/buy"
            style="?attr/borderlessButtonStyle"
            android:text="线上预定"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:layout_marginTop="44dp"
            android:layout_alignStart="@+id/buyit"></Button>
            <Button
                android:layout_height="35dp"
                android:layout_width="wrap_content"
                android:id="@+id/buyit"
                style="?attr/borderlessButtonStyle"
                android:text="线下支付"
                android:textColor="@color/orange"
                android:background="@drawable/button"
                android:layout_marginEnd="36dp"
                android:layout_below="@+id/buy"
                android:layout_alignParentEnd="true"
                ></Button>

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_below="@+id/publishtime"
            android:layout_alignParentStart="true">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/triangle"
                />
        </RelativeLayout>
    </RelativeLayout>
        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/expand_text_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/content_layout"
            android:orientation="vertical"
            app:ael_duration="400"
            app:ael_expanded="false">

            <TextView
                android:id="@id/expandable_text"
                android:text="详细信息\n\n\n\n\n\n\n\n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#666666"
                android:textSize="16sp" />
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@android:color/transparent"
                android:padding="16dp" />
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
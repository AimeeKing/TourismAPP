<?xml version="1.0" encoding="utf-8"?>
<com.redbooth.WelcomePageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/welcome_page"
    tools:background="@color/page4">
    <TextView
        app:view_behavior=".View.ParallaxSubtitleBehaviour"
        style="@style/text_subtitle"
        android:id="@+id/title"
        android:layout_above="@+id/subtitle"
        android:text="请输入"
         />
    <TextView
        app:view_behavior=".View.ParallaxTitleBehaviour"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        style="@style/text_title"
        android:id="@+id/subtitle"
        android:text="您的手机号"
         />
    <EditText
        app:view_behavior=".View.ParallaxSubtitleBehaviour"
        android:singleLine="true"
        android:id="@+id/phonenumber"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_title"
        android:layout_below="@+id/subtitle"
        android:backgroundTint="@color/white"
        android:textStyle="italic"
        android:hint="eg 18943232432"
        android:textColorHint="#99ffffff"
        />
    <TextView
        android:visibility="invisible"
        android:gravity="right"
        android:layout_below="@id/phonenumber"
        style="@style/text_subtitle"
        android:id="@+id/hint"
        android:text="每一个号码只能注册一次哦"
        />
</com.redbooth.WelcomePageLayout>

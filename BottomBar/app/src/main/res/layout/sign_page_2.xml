<?xml version="1.0" encoding="utf-8"?>
<com.redbooth.WelcomePageLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/welcome_page"
    tools:background="@color/page3">
    <TextView
        app:view_behavior=".View.ParallaxSubtitleBehaviour"
        style="@style/text_subtitle"
        android:id="@+id/title"
        android:layout_above="@+id/subtitle"
        android:text="请输入"
        />
    <TextView
        app:view_behavior=".View.ParallaxTitleBehaviour"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        style="@style/text_title"
        android:id="@+id/subtitle"
        android:text="您的密码"
        />
    <EditText
        app:view_behavior=".View.ParallaxSubtitleBehaviour"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:id="@+id/password"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_title"
        android:layout_below="@+id/subtitle"
        android:backgroundTint="@color/white"
        android:textStyle="italic"
        android:hint=""
        android:textColorHint="#99ffffff"/>
    <ImageButton
        android:id="@+id/show"
        android:layout_toRightOf="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:layout_marginLeft="-40dp"
        android:background="#00ffffff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/notshow"
        android:scaleType="centerInside"
        android:imeOptions="actionDone"/>
    <TextView
        android:visibility="invisible"
        android:gravity="right"
        android:layout_below="@+id/password"
        style="@style/text_subtitle"
        android:id="@+id/hint_password"
        android:text="密码需要大于六位哦"
        />
</com.redbooth.WelcomePageLayout>
